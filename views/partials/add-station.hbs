<form class="box" action="/dashboard/addstation" method="POST">
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field has-addons">
        <div class="control">
          <label class="label">Name</label>
          <input class="input" id="iname" type="text" placeholder="Find a City" name="name" value="{{city.name}}">
        </div>      
        <div class="control" >
          <label class="label has-text-white">.</label>
          <button class="button is-info" type="submit" formaction="/dashboard" formmethod="GET"> Search</button>
        </div>
      </div>

      <div class="field">
        <label class="label">Api Id</label>
        <input class="input" type="text" placeholder="0000" name="apiid" value="{{city.id}}"> 
      </div>

      <div class="field">
        <label class="label">Latitude</label>
        <input class="input" type="text" placeholder="00.00" name="latitude" value="{{city.coord.lat}}"> 
      </div>
      
      <div class="field">
        <label class="label">Longitude</label>
        <input class="input" type="text" placeholder="00.00" name="longitude" value="{{city.coord.lon}}" >
      </div>
    </div>
  </div>
  <button class="button is-link">Add Station</button>
</form>
