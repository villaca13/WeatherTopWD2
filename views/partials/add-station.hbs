<form class="box" action="/dashboard/addstation" method="POST">
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label class="label">Name</label>
        <input class="input" type="text" placeholder="Name" name="name">
      </div>
      
      <div class="field">
        <label class="label">Latitude</label>
        <input class="input" type="text" placeholder="00.00" name="latitude">
      </div>
      
      <div class="field">
        <label class="label">Longitude</label>
        <input class="input" type="text" placeholder="00.00" name="longitude">
      </div>
    </div>
  </div>
  <button class="button is-link">Add Station</button>
</form>
