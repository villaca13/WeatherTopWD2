<div class="section">
  <h1 class="title">Auto Add Stations </h1>
  <p class="subtitle">Find below Stations available:</p>

  <div class="columns is-multiline">
    {{#each cities}}
    <div class="column is-narrow">   
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"> {{name}} {{country}} </p>
          <button class="card-header-icon" aria-label="more options">
            <span class="icon">
              <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
          </button>
        </header>
        <div class="card-content">
          <div class="content is-small">
              <p>Api Id: {{id}}</p>
              <p>Latitude: {{coord.lat}}</p>
              <p>Longitude: {{coord.lon}}</p>
          </div>
        </div>
        <footer class="card-footer"> 
          <form class="card-footer-item" action="/dashboard/autoaddstation/{{id}}" method="POST">
            <button class="button is-info"> Auto Add Station</button>
          </form>
        </footer>
      </div> 
    </div>
  {{/each}}
  </div>
</div>